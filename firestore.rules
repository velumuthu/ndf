
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to products
    match /products/{productId} {
      allow read: if true;
      // Admin operations for products
      allow write: if true; 
    }

    // Allow anyone to create orders, bulk orders, and stylist inquiries
    match /orders/{orderId} {
      allow create: if true;
      // Allow admin to read and update orders
      allow read, update: if true;
    }
    match /bulk-orders/{orderId} {
      allow create: if true;
      // Allow admin to read bulk orders
      allow read: if true;
    }
     match /stylist-inquiries/{inquiryId} {
      allow create: if true;
      // Allow admin to read inquiries
      allow read: if true;
    }

    // Allow public read for active offers, and write for admin
    match /offers/{offerId} {
        allow read, write: if true;
    }

    // Allow public read and write for notifications
    match /notifications/{notificationId} {
        allow read, write: if true;
    }
  }
}
